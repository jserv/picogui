/* This is an example theme file.
   It sets the default fill style to a simple
   flat background with rectangular frame.
   Default colors are black on white, but 
   they are overridden in the button.
*/

object default {
  bgfill = fillstyle {
    Frame(x,y,w,h,fgcolor);
    Rect(x+1,y+1,w-2,h-2,bgcolor);
  };
  fgcolor = 0x000000;
  bgcolor = 0xFFFFFF;
};

object themeinfo name = "Example theme";
object button bgcolor = 0x8080FF;
object button.hilight bgcolor = 0xB0B0FF;
