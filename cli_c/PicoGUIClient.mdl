# -*- python -*-

from Bee.Autoconf import compile, install, clean

multicompile = 1

depends = [ 'resourcemanager' ]


def prepare (module, platform, project):
    command = "../configure --prefix=/  --enable-bee --enable-unix-sockets " + \
              "--with-prefix --host=%s" %  platform.platform

    message  ("running: %s" % command)
    sequence ("rm -f config.status ; test ! -f ../autogen.sh || (cd .. ; ./autogen.sh || true)",
              command)
    return

