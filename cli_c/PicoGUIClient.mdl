# -*- python -*-

from beeconfig import compile, install, clean

multicompile = 1

depends = [ 'resourcemanager' ]


def prepare (module, platform, project):
    command = "../configure --with-rpm-prefix=%s --prefix=/ --with-prefix --host=%s --enable-bee" % \
              (module.install_path (platform, project, standard = 1),
               platform.feature ['platform'])

    message  ("running: %s" % command)
    sequence ("rm -f config.status ; test ! -f ../autogen.sh || (cd .. ; ./autogen.sh || true)",
              command)
    return

