/*
 * Adds translucent popups and menus to the aqua theme
 */

object default name = "Modifier: Blurry Aqua";

object base.display bgfill = fillstyle {
  Bitmap(x,y,w,h,background::bitmap1);
  SetLgop(PG_LGOP_ALPHA);
  SetColor(PGCF_ALPHA | PGC_WHITE | (100<<24));
  Rect(x,y,w,h);
  SetLgop(PG_LGOP_NONE);
  Blur(x,y,w,h,8);
};

