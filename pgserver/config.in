mainmenu_name "PicoGUI Configuration"

mainmenu_option next_comment
comment 'Target System'

choice 'Platform' \
	"Linux-generic                  CONFIG_LINUX_GENERIC \
	 uClinux-m68k 	        	UCLINUX \
	 Linux-mips                     CONFIG_LINUX_MIPS \
	 
	 Windows			WINDOWS" Linux-generic
if [ "$UCLINUX" = "y" ]; then
    choice 'Platform running uClinux' \
        "Generic                CONFIG_UCLINUX_GENERIC \
	 Real_ChipSlice         CONFIG_CHIPSLICE \
         Soft_ChipSlice         CONFIG_SOFT_CHIPSLICE \
         Xcopilot               CONFIG_XCOPILOT" Generic
    bool 'm68k asm optimization (not implemented)' ASM_68000
fi
if [ "$CONFIG_LINUX_GENERIC" = "y" ]; then
    bool 'x86 asm optimization'             ASM_INTEL
fi

bool 'Use UNIX sockets instead of TCP/IP'   CONFIG_UNIX_SOCKET
endmenu

mainmenu_option next_comment
comment 'Debugging'
bool 'Enable text messages'             CONFIG_TEXT
if [ "$UCLINUX" != "y" ]; then
    bool 'Debugging symbols in binary'      CONFIG_NOSTRIP
fi
bool 'Debugging keys'                   DEBUG_KEYS
bool 'Video test mode'                  CONFIG_VIDEOTEST
bool 'Disable compiler optimization'    CONFIG_NO_OPTIMIZE
bool 'Electric Fence malloc debugging'  CONFIG_EFENCE
bool 'gcov coverage analysis'           CONFIG_GCOV
bool 'gprof profiling'                  CONFIG_GPROF
bool 'Terminal prints unknown escapes'  BOTHERSOME_TERMINAL
bool 'Widget debugging'                 DEBUG_WIDGET
bool 'Event debugging'                  DEBUG_EVENT
bool 'Video debugging'                  DEBUG_VIDEO
bool 'Theme debugging'                  DEBUG_THEME
bool 'Client/server debugging'          DEBUG_NET
bool 'Initialization debugging'         DEBUG_INIT
bool 'Memory debugging'                 DEBUG_MEMORY
bool 'Mirror guru() output on stderr'   CONFIG_STDERR_GURU
endmenu

mainmenu_option next_comment
comment 'Fonts'
bool 'Helvetica 10 (default font)'         FONT_HELVETICA10
