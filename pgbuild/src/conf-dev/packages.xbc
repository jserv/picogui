<?xml version="1.0" ?>
<pgbuild title="General package list" root="packages">
    
	<package name="hello">
		<description><summary>Everyone's favorite greeting software, now for PGBuild!</summary></description>
		<version name="dev">
			<a href="users/micah/hello"><site name="picogui-svn" /></a>
		</version>
	</package>

	<package name="media/blender">
		<description><summary>3D renderings and source files related to PicoGUI, made with Blender</summary></description>
		<versiongroup name="picogui-versions" path="media/blender"/>
	</package>

	<package name="media/fonts">
		<description><summary>Standard package of free TrueType fonts for PicoGUI</summary></description>
		<versiongroup name="picogui-versions" path="media/fonts"/>
	</package>

	<package name="media/images">
		<description><summary>Concept art, logos, and other unessential PicoGUI-related images</summary></description>
		<versiongroup name="picogui-versions" path="media/images"/>
	</package>

	<package name="tools/css">
		<description><summary>Miscellaneous Cascading Style Sheets used in the PicoGUI repository</summary></description>
		<versiongroup name="picogui-versions" path="tools/css"/>
	</package>

	<package name="tools/irc">
		<description><summary>Utilities for the #picogui IRC channel</summary></description>
		<versiongroup name="picogui-versions" path="tools/irc"/>
	</package>

	<package name="tools/svn">
		<description><summary>Tools for analysis, notification, and backups of the Subversion repository</summary></description>
		<versiongroup name="picogui-versions" path="tools/svn"/>
	</package>

	<package name="tools/xslt">
		<description><summary>XML stylesheets for viewing and translating the XML formats PicoGUI uses</summary></description>
		<versiongroup name="picogui-versions" path="tools/xslt"/>
	</package>

</pgbuild>
