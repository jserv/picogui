import PGBuild.Config
env = Environment()

# Use the default configuration tree
conf = PGBuild.Config.default

# Mount our test file into the configuration tree
conf.mount(env.fs.Entry("test.xml"))

# Show the list of mounts
print conf.mounts

# Print the whole config tree
print conf.toprettyxml()

